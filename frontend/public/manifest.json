{
  "manifest_version": 3,
  "name": "Gemini Extension",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "tabs"],
  "description": "A Chrome extension to interact with Gemini API",
  "icons": {
    "16": "assets/mindmap16.png",
    "48": "assets/mindmap50.png",
    "128": "assets/mindmap100.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/problems/*"],
      "js": ["content.js"]
    }
  ]
}
